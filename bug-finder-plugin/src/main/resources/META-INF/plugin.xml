<idea-plugin>
    <id>org.jetbrains.research.bug-finder-plugin</id>
    <name>Bug Finder</name>
    <vendor>JetBrains Research</vendor>

    <description><![CDATA[
        A static code analysis tool that tries to find complicated,
        semantic, and, as far as possible, buggy patterns in your Python code.
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="org.jetbrains.research.ide.BugFinderStartupActivity"/>
        <applicationService serviceImplementation="org.jetbrains.research.ide.BugFinderConfigService"/>
        <localInspection language="Python"
                         groupPath="Python"
                         groupName="BugFinder plugin"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.jetbrains.research.ide.BugFinderInspection"
                         displayName="BugFinder"
                         shortName="BugFinder"/>
    </extensions>

</idea-plugin>