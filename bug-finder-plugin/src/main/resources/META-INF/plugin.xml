<idea-plugin>
    <id>org.jetbrains.research.bug-finder-plugin</id>
    <name>Bug Finder</name>
    <vendor>JetBrains Research</vendor>

    <description><![CDATA[
        Data driven bug fix suggestion based on popular Python code change patterns
    ]]></description>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.python</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="Python"
                         groupPath="Python"
                         groupBundle="BugFinderPythonBundle"
                         enabledByDefault="true"
                         level="WARNING"
                         implementationClass="org.jetbrains.research.ide.BugFinderInspection"
                         displayName="BugFinder: found similar pattern"
                         shortName="BugFinder"/>
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>